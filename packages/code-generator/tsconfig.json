{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": false,
        "noImplicitAny": false,
        "outDir": "build/",
        "rootDir": "src/",
        "moduleResolution": "node",
        "strictNullChecks": false,
        "sourceMap": true,
        "declaration": true,
        "downlevelIteration": true,
        "lib": [
            "esnext"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "compileOnSave": false,
    "typingOptions": {
        "enableAutoDiscovery": true
    }
}